- var n = 0
while n < answersNumber
  section(key=n)
    div.question-q.order.number
      if isMarked()
        if isCorrect(n)
          span.question-q.mark-on-check.correct
            Fa(icon='circle-o')
        else
          span.question-q.mark-on-check.incorrect
            Fa(icon='times')
      span.number-circle= n + 1
    div.question-q.order.select
      select.question-q.order.selector(onChange=select name=n disabled=isMarked() value=selected(n))
        option(value='') 未選択
        each opt, index in options
          option(value=opt.id key=opt.id)= opt.marked.__html
  - n++